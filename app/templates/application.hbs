Chord Trainer

<MidiSwitch
@enabler = {{ action this.midiEnabler }}
@disabler = {{ action this.midiDisabler }}
@error = {{ this.midiError }}
@status = {{ this.midiEnabled }} />

{{#if this.midiEnabled}}

  <MidiSelector
  @selectorType = "Midi Input"
  @onSelectionChange = {{this.updateInputSelection }}
  @currentSelection = {{this.selectedInput}}
  @list = {{ this.midiInputs }}/>

  <MidiSelector
  @selectorType = "Midi Output"
  @onSelectionChange = {{this.updateOutputSelection }}
  @currentSelection = {{this.selectedOutput}}
  @list = {{ this.midiOutputs }}/>

{{/if}}

